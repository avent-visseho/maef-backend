# ===================================
# Fichier .env
# ===================================

"""
# .env.example
# Copier ce fichier vers .env et remplir les valeurs
"""
# Application
APP_NAME="Maef By Yas API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Base de données
DATABASE_URL=postgresql+psycopg://maef_user:maef_password@localhost:5432/maef_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Security (IMPORTANT: Changer en production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=43200

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Instagram (optionnel pour début)
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/v1/auth/instagram/callback

# Stripe (optionnel pour début)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (optionnel pour début)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@maefbyyas.com

# Search
SEARCH_ENGINE=postgresql

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
